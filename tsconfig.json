{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",

    /* JavaScript Support */
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    /* Emit */
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true,

    "paths": {
      "@src/*": ["./src/*"],
      "@domain/*": ["./src/Domain/*"],
      "@apis/*": ["./src/Apis/*"],
      "@persistence/*": ["./src/Persistence/*"],
      "@data/*": ["./src/Persistence/Data/*"],
      "@helpers/*": ["./src/Helpers/*"],
      "@exceptions/*": ["./src/Exceptions/*"],
      "@mappers/*": ["./src/Mappers/*"],
      "@tests/*": ["./src/__tests__/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src"]
}
